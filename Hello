    }
    table {
      margin: 20px auto;
      border-collapse: collapse;
      width: 80%;
      background-color: white;
    }
    th, td {
      border: 1px solid #888;
      padding: 8px 12px;
      text-align: center;
    }
    th {
      background-color: #ccc;
    }
  </style>
